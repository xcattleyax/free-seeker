<div class="wrapper">
  <div class="main-sub-frame">
    グループ名<p class="group-name2"><%= @group.name %></p>
    活動内容<p class="group-content1"><%= @group.content %></p>
  </div>
  <div class="right-bar">
    <p class="group-right-top">メンバー <%= @users.length %>人</p>
    <% @users.each do |user| %>
      <p class="group-right-name"><%= user.name %></p>
    <% end %>
  </div>
</div>
<div class="wrapper">
  <%= link_to "編集", edit_group_path(@group.id), class:"link-button" %>
  <%= link_to "新規投稿", new_post_path(group_id: @group.id), class:"link-button" %>
  <%= link_to "編集投稿", posts_path(group_id: @group.id), class:"link-button" %>
  <%= link_to "脱退", group_path(@group.id), method: :delete, class:"link-button" %>
</div>
