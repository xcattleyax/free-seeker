<div class="message-space">
  <% @messages.each do |message| %>
    <% if message.user_id == current_user.id %>
    <div class="message-mine"><%= message.message %>
      <%= message.user.name %>
    </div>
    <% else %>
    <div class="message-content"><%= message.message %>
      <%= message.user.name %>
    </div>
    <% end %>
  <% end %>
</div>
<%= form_with model: [@group, @message], class:"message-form-space", local: true do |f| %>
  <%= f.text_area :message, class:"message-form"%>
  <%= f.submit '送信', class:"button"%>
<% end %>
