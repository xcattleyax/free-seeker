<div class="bottom-space">
  <%= form_with url: scadules_path, method: :get, local: true do |f| %>
    <div class="wrapper">
      <%= f.collection_select(:group_id, @groups, :id, :name, {}, {class:"scadule-select"} ) %>
      <%= f.submit "変更",class:"button"%>
    </div>
  <% end %>
  <div class="scadule-calendar">
    <%= month_calendar attribute: :date, events: @scadules do |date, scadules| %>
      <%= date.day %>

      <% scadules.each do |scadule| %>
        <div>
          <%= scadule.content %>
        </div>
      <% end %>
    <% end %>
  </div>
